{
  "segments": {
    "left": [
      {
        "function": "powerline.segments.common.net.hostname",
        "priority": 10,
        "args": {
          "only_if_ssh": false,
          "exclude_domain": true
        }
      },
      {
        "function": "powerline.segments.shell.cwd",
        "priority": 10,
        "args": {
          "use_path_separator": true,
          "shorten_home": true,
          "dir_limit_depth": 3
        }
      },
      {
        "function": "powerline_gitstatus.gitstatus",
        "priority": 40
      }
    ],
    "right": [
    ]
  }
}
