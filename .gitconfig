[color]
status = auto
branch = auto
interactive = auto
diff = auto

[alias]
cp = cherry-pick
st = status -s
cl = clone
ci = commit
co = checkout
cob = checkout -b
br = branch
ls = log --date=human --pretty=format:"%Cgreen[%cd]\\ %C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
tree = log --graph --oneline
rm-merged = "!git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
current-branch = "!git rev-parse --abbrev-ref HEAD"
up  = "!f() { git pull --no-progress && git add . && git commit -a -m \"$1\" && git push -u origin $(git current-branch); }; f"
undo-commit = reset --soft HEAD~1
